<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    >

    <CheckBox
        android:id="@+id/multi_recycler_view_item_check_box"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_multi_thumb"
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tv_multi_date"
            android:layout_weight="1"
            android:text="2018/1/5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_multi_size"
            android:text="1.5MB"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_multi_share"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_share_black"
        android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="30dp" />


</LinearLayout>